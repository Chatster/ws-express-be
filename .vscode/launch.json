    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch WSS",
            "program": "${workspaceFolder}/src/server.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/server/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch S.IO",
            "program": "${workspaceFolder}/src/server.io.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/server/**/*.js"
            ]
        }
    ]
}